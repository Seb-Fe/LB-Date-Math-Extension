lioranboardclient.send('{"type":"MESSAGE","topic":"ExtensionCommand","name":"Date Diff","boxcount":5,"boxname1":"variable","boxtype1":"string","boxname2":"inFormat","boxtype2":"string","boxname3":"date1","boxtype3":"string","boxname4":"date2","boxtype4":"string","boxname5":"unit|minutes|hours|days|months|years|","boxtype5":"string"}');
[insert_hook]
case "DateMath":{
	LBDateMath(LioranBoardJSON.variable, LioranBoardJSON.inFormat, LioranBoardJSON.date, LioranBoardJSON.operator, LioranBoardJSON.number, LioranBoardJSON.unit, LioranBoardJSON.outFormat);
}break;
